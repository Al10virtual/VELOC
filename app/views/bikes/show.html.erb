        <div class="cadre-photo" style="background-image: url('<%= cl_image_path @bike.photo.key %>')"></div>
      <% else %>
        <div class="cadre-photo" style="background-image: url('<%= image_path 'placeholder_bike.jpg' %>')"></div>
      <% end %>
  </div>
  <div class="row">
    <div class="col">
      <p><strong>Type:</strong>
      <p><strong>Wheel size:</strong>
      <p><strong>Frame material:</strong>
      <p><strong>Brand:</strong>
      <p><strong>Conditon:</strong>
      <p><strong>Price per day:</strong>
      <p><strong>Price per week:</strong>
    </div>
    <div class="col">
      <%= @bike.bike_type %></p>
      <%= @bike.wheel_size %></p>
      <%= @bike.frame_material %></p>
      <%= @bike.brand %></p>
      <%= @bike.condition %></p>
      <%= @bike.price_per_day %></p>
      <%= @bike.price_per_week %></p>
    </div>
     <div class="col">
        <p></p>
    </div>
    <div class="col">
        <p></p>
      </div>
  </div>
</div>
