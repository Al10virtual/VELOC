<div class="container">
  <h1>See rental details below:</h1>
  <p><strong>Type:</strong> <%= @bike.bike_type %></p>
  <p><strong>Wheel size:</strong> <%= @bike.wheel_size %></p>
  <p><strong>Frame material:</strong> <%= @bike.frame_material %></p>
  <p><strong>Brand:</strong> <%= @bike.brand %></p>
  <p><strong>Conditon:</strong> <%= @bike.condition %></p>
  <p><strong>Price per day:</strong> <%= @bike.price_per_day %></p>
  <p><strong>Price per week:</strong> <%= @bike.price_per_week %></p>
  <p><%= link_to "Back to all rentals", bikes_path, class: 'btn btn-primary' %></p>
</div>



  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-product mb-3">
      <%= image_tag bookmark.movie.poster_url, width: 200 %>
      <div style="position: absolute; right: 200px"><em><%= bookmark.comment%><em></div>
          <div class="card-product-infos" style="position: relative;">
            <h2><%= bookmark.movie.title%></h2>
            <p><%= bookmark.movie.overview%></p>
            <p>Rating: <%= bookmark.movie.rating%> / 10</p>
            <p>
              <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'} do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            </p>
          </div>
        </div>
      <% end %>
      <div class="mb-3">
        <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
